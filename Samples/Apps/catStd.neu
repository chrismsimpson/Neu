
func main(args: [String]) {
    
    if args.size() <= 1 {
        
        warnLine("usage: cat <path>")
        
        return 1
    }

    var file = File.openForReading(args[1])

    var array: [UInt8] = [UInt8(0)]

    while file.read(array) != 0 {

        for index in 0..array.size() {

            print("{:c}", array[index])
        }
    }
}
